{
  "name": "sharedstake-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup": "nvm use 18",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --config jest.config.js",
    "test:unit:watch": "jest --config jest.config.js --watch",
    "test:unit:coverage": "jest --config jest.config.js --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:headless": "cypress run --headless",
    "test:e2e:chrome": "cypress run --browser chrome",
    "test:e2e:firefox": "cypress run --browser firefox",
    "test:ci": "npm run lint && npm run test:unit && npm run test:e2e:headless"
  },
  "dependencies": {
    "@babel/core": "7.28.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.18.6",
    "@babel/plugin-syntax-bigint": "7.8.3",
    "@babel/plugin-transform-optional-chaining": "7.27.1",
    "@babel/preset-env": "7.28.3",
    "@web3-onboard/core": "2.24.1",
    "@web3-onboard/injected-wallets": "2.11.3",
    "axios": "1.12.2",
    "bignumber.js": "9.3.1",
    "bnc-notify": "1.9.8",
    "core-js": "3.45.1",
    "ethers": "6.15.0",
    "marked": "^4.3.0",
    "vue": "2.7.16",
    "vue-ellipse-progress": "1.3.1",
    "vue-notification": "1.3.20",
    "vue-router": "3.6.5",
    "vuex": "3.6.2"
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/vue": "^5.8.3",
    "@vue/cli-plugin-babel": "5.0.9",
    "@vue/cli-plugin-eslint": "5.0.9",
    "@vue/cli-service": "5.0.9",
    "@vue/test-utils": "^1.3.6",
    "autoprefixer": "9.8.8",
    "babel-eslint": "10.1.0",
    "babel-jest": "^30.2.0",
    "cypress": "^15.4.0",
    "eslint": "7.32.0",
    "eslint-plugin-vue": "8.7.1",
    "jest": "^30.2.0",
    "postcss": "7.0.39",
    "raw-loader": "^4.0.2",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@2.2.17",
    "vue-jest": "^3.0.7",
    "vue-template-compiler": "2.7.16"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "vue/multi-word-component-names": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "resolutions": {
    "crypto-es": "2.1.0"
  }
}
