{
  "name": "sharedstake-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "setup": "bun install",
    "serve": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "lint": "eslint src --ext .vue,.js,.ts --fix",
    "lint:fix": "eslint src --ext .vue,.js,.ts --fix",
    "type-check": "vue-tsc --noEmit",
    "type-check:watch": "vue-tsc --noEmit --watch",
    "dev": "vite",
    "start": "vite",
    "test": "echo \"No tests specified\" && exit 0",
    "audit": "bun audit --level moderate || true",
    "audit:strict": "bun audit --level moderate",
    "clean": "rm -rf dist node_modules/.cache",
    "prebuild": "bun run clean",
    "postbuild": "echo \"Build completed successfully\"",
    "docker:build": "docker build -t sharedstake-ui .",
    "docker:run": "docker run -p 8080:8080 sharedstake-ui",
    "optimize:images": "bun run scripts/optimize-images.js",
    "analyze:bundle": "vite build --mode analyze",
    "analyze:security": "bun audit --level moderate"
  },
  "dependencies": {
    "@babel/core": "7.28.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.18.6",
    "@babel/plugin-syntax-bigint": "7.8.3",
    "@babel/plugin-transform-optional-chaining": "7.27.1",
    "@babel/preset-env": "7.28.3",
    "@web3-onboard/core": "2.24.1",
    "@web3-onboard/injected-wallets": "2.11.3",
    "axios": "1.12.2",
    "bignumber.js": "9.3.1",
    "bnc-notify": "1.9.8",
    "core-js": "3.45.1",
    "ethers": "6.15.0",
    "marked": "16.4.0",
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "vue-ellipse-progress": "^2.2.0",
    "vue-router": "^4.2.0",
    "vue-toastification": "^2.0.0-rc.5"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.28.4",
    "@types/webpack-env": "1.18.8",
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "10.4.21",
    "eslint": "^9.37.0",
    "eslint-plugin-vue": "^10.5.0",
    "globals": "^16.4.0",
    "postcss": "8.4.31",
    "raw-loader": "4.0.2",
    "tailwindcss": "3.4.18",
    "typescript": "5.9.3",
    "vite": "^7.1.9",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^2.0.0",
    "webpack-dev-server": "5.2.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "requireConfigFile": false
    },
    "rules": {
      "vue/multi-word-component-names": "off",
      "vue/no-reserved-component-names": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "overrides": {
    "crypto-es": "2.1.0",
    "postcss": "8.4.31",
    "webpack-dev-server": "5.2.1",
    "ws": "8.18.0",
    "cross-spawn": "6.0.6",
    "nanoid": "5.0.9",
    "esbuild": "0.25.0"
  }
}
